@{
    ViewData["Title"] = "Müşteri Paneli";
}

<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4"><i class="bi bi-person-circle"></i> Hoş Geldiniz</h1>
            <p class="lead text-muted">@ViewBag.UserName</p>
        </div>
    </div>

    <!-- Quick Info Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-start border-primary border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">E-posta</h6>
                            <p class="mb-0 fw-bold">@ViewBag.UserEmail</p>
                        </div>
                        <div class="text-primary fs-1">
                            <i class="bi bi-envelope"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-start border-success border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Son Siparişler</h6>
                            <p class="mb-0 fw-bold">@ViewBag.RecentOrders.Count adet</p>
                        </div>
                        <div class="text-success fs-1">
                            <i class="bi bi-bag-check"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-start border-info border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Durum</h6>
                            <p class="mb-0 fw-bold text-success">Aktif</p>
                        </div>
                        <div class="text-info fs-1">
                            <i class="bi bi-check-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-lightning-fill"></i> Hızlı Erişim</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary w-100 py-3">
                                <i class="bi bi-shop fs-3 d-block mb-2"></i>
                                Alışverişe Başla
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-controller="Customer" asp-action="MyOrders" class="btn btn-outline-success w-100 py-3">
                                <i class="bi bi-box-seam fs-3 d-block mb-2"></i>
                                Siparişlerim
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-warning w-100 py-3">
                                <i class="bi bi-cart3 fs-3 d-block mb-2"></i>
                                Sepetim
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-controller="Customer" asp-action="Profile" class="btn btn-outline-info w-100 py-3">
                                <i class="bi bi-person-gear fs-3 d-block mb-2"></i>
                                Profil Ayarları
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Son Siparişlerim</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentOrders != null && ViewBag.RecentOrders.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Sipariş No</th>
                                        <th>Tarih</th>
                                        <th>Durum</th>
                                        <th>Tutar</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in ViewBag.RecentOrders)
                                    {
                                        <tr>
                                            <td><strong>#@order.OrderId</strong></td>
                                            <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                                            <td>
                                                @{
                                                    var badgeClass = order.Status switch
                                                    {
                                                        "Pending" => "bg-warning",
                                                        "Processing" => "bg-info",
                                                        "Shipped" => "bg-primary",
                                                        "Delivered" => "bg-success",
                                                        "Cancelled" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                    var statusText = order.Status switch
                                                    {
                                                        "Pending" => "Beklemede",
                                                        "Processing" => "İşleniyor",
                                                        "Shipped" => "Kargoda",
                                                        "Delivered" => "Teslim Edildi",
                                                        "Cancelled" => "İptal Edildi",
                                                        _ => order.Status
                                                    };
                                                }
                                                <span class="badge @badgeClass">@statusText</span>
                                            </td>
                                            <td><strong>₺@order.TotalAmount.ToString("N2")</strong></td>
                                            <td>
                                                <a asp-controller="Orders" asp-action="OrderDetails" asp-route-id="@order.OrderId" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> Detay
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a asp-controller="Customer" asp-action="MyOrders" class="btn btn-primary">
                                <i class="bi bi-list"></i> Tüm Siparişleri Görüntüle
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle"></i> Henüz siparişiniz bulunmamaktadır.
                            <a asp-controller="Products" asp-action="Index" class="alert-link">Alışverişe başlayın!</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
