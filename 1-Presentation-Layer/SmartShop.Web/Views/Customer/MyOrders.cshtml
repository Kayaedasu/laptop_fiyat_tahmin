@model List<SmartShop.Business.DTOs.OrderDto>
@{
    ViewData["Title"] = "Siparişlerim";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5"><i class="bi bi-box-seam"></i> Siparişlerim</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Customer" asp-action="Dashboard">Panel</a></li>
                    <li class="breadcrumb-item active">Siparişlerim</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Tüm Siparişler (@Model.Count adet)</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Sipariş No</th>
                                        <th>Tarih</th>
                                        <th>Durum</th>
                                        <th>Ödeme Yöntemi</th>
                                        <th>Toplam Tutar</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td><strong class="text-primary">#@order.OrderId</strong></td>
                                            <td>
                                                <small class="text-muted">@order.OrderDate.ToString("dd MMM yyyy")</small><br />
                                                <small class="text-muted">@order.OrderDate.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                @{
                                                    var badgeClass = order.Status switch
                                                    {
                                                        "Pending" => "bg-warning",
                                                        "Processing" => "bg-info",
                                                        "Shipped" => "bg-primary",
                                                        "Delivered" => "bg-success",
                                                        "Cancelled" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                    var statusText = order.Status switch
                                                    {
                                                        "Pending" => "Beklemede",
                                                        "Processing" => "İşleniyor",
                                                        "Shipped" => "Kargoda",
                                                        "Delivered" => "Teslim Edildi",
                                                        "Cancelled" => "İptal Edildi",
                                                        _ => order.Status
                                                    };
                                                }
                                                <span class="badge @badgeClass">@statusText</span>
                                            </td>
                                            <td>@order.PaymentMethod</td>
                                            <td><strong class="text-success">₺@order.TotalAmount.ToString("N2")</strong></td>
                                            <td>                                <a asp-controller="Orders" asp-action="OrderDetails" asp-route-id="@order.OrderId" 
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Detay
                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-cart-x display-1 text-muted"></i>
                        <h3 class="mt-3">Henüz Siparişiniz Yok</h3>
                        <p class="text-muted">Alışverişe başlamak için ürünleri keşfedin!</p>
                        <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg mt-3">
                            <i class="bi bi-shop"></i> Alışverişe Başla
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
