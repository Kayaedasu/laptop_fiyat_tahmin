</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });

        // Image Preview
        document.getElementById('imageFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                // Validate file size (5MB max)
                if (file.size > 5 * 1024 * 1024) {
                    alert('Dosya boyutu 5MB\'dan k√º√ß√ºk olmalƒ±dƒ±r');
                    e.target.value = '';
                    document.getElementById('imagePreview').style.display = 'none';
                    return;
                }
                
                // Validate file type
                if (!file.type.startsWith('image/')) {
                    alert('L√ºtfen bir g√∂rsel dosyasƒ± se√ßin');
                    e.target.value = '';
                    document.getElementById('imagePreview').style.display = 'none';
                    return;
                }
                
                // Show preview
                const reader = new FileReader();
                reader.onload = function(event) {
                    document.getElementById('previewImg').src = event.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                document.getElementById('imagePreview').style.display = 'none';
            }
        });

        // ML Price Prediction
        document.getElementById('predictPriceBtn').addEventListener('click', async function() {
            const ramInput = document.querySelector('input[name="RAM"]');
            const storageInput = document.querySelector('input[name="Storage"]');
            const processorInput = document.getElementById('processorInput');
            const gpuInput = document.getElementById('gpuInput');
            const brandInput = document.querySelector('input[name="Brand"]');
            
            const ram = parseFloat(ramInput.value);
            const storage = parseFloat(storageInput.value);
            const processor = processorInput.value.trim() || 'i5';  // Default to i5 if empty
            const gpu = gpuInput.value.trim() || 'integrated';  // Default to integrated if empty
            const brand = brandInput.value.trim() || 'Diƒüer';  // Default to Diƒüer if empty
            
            // Validation
            if (!ram || ram <= 0) {
                alert('L√ºtfen ge√ßerli bir RAM deƒüeri girin (GB)');
                ramInput.focus();
                return;
            }
            
            if (!storage || storage <= 0) {
                alert('L√ºtfen ge√ßerli bir Depolama deƒüeri girin (GB)');
                storageInput.focus();
                return;
            }
            
            // Show loading state
            const btn = this;
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Tahmin Ediliyor...';
            document.getElementById('predictionResult').style.display = 'none';
            document.getElementById('predictionError').style.display = 'none';
            
            try {
                const response = await fetch('/Admin/PredictPrice', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        ram_gb: ram,
                        ssd_gb: storage,
                        islemci: processor,
                        ekran_karti: gpu,
                        marka: brand
                    })
                });
                
                if (!response.ok) {
                    throw new Error('Prediction failed');
                }
                
                const data = await response.json();
                
                // Show result
                document.getElementById('predictedPrice').textContent = data.tahmini_fiyat.toFixed(2);
                document.getElementById('predictionResult').style.display = 'block';
                
            } catch (error) {
                console.error('Error:', error);
                const errorDiv = document.getElementById('predictionError');
                errorDiv.textContent = '‚ùå Fiyat tahmini alƒ±namadƒ±. ML servisinin √ßalƒ±≈ütƒ±ƒüƒ±ndan emin olun (ML-Service/start-ml-service.bat)';
                errorDiv.style.display = 'block';
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-stars"></i> Fiyat Tahmin Et';
            }
        });
        
        // Apply predicted price
        document.getElementById('applyPriceBtn').addEventListener('click', function() {
            const predictedPrice = parseFloat(document.getElementById('predictedPrice').textContent);
            document.getElementById('priceInput').value = predictedPrice.toFixed(2);
        });
        
        // Form validation
        document.getElementById('productForm').addEventListener('submit', function(e) {
            var name = document.querySelector('input[name="Name"]').value.trim();
            var price = parseFloat(document.querySelector('input[name="Price"]').value);
            var stock = parseInt(document.querySelector('input[name="StockQuantity"]').value);
            var categoryId = document.querySelector('select[name="CategoryId"]').value;
            var ram = parseInt(document.querySelector('input[name="RAM"]').value);
            var storage = parseInt(document.querySelector('input[name="Storage"]').value);
            
            if (!name) {
                e.preventDefault();
                alert('√úr√ºn adƒ± gereklidir!');
                return false;
            }
            
            if (price < 0) {
                e.preventDefault();
                alert('Fiyat negatif olamaz!');
                return false;
            }
            
            if (stock < 0) {
                e.preventDefault();
                alert('Stok miktarƒ± negatif olamaz!');
                return false;
            }
            
            if (!categoryId) {
                e.preventDefault();
                alert('L√ºtfen bir kategori se√ßin!');
                return false;
            }

            if (!ram || ram <= 0) {
                e.preventDefault();
                alert('RAM deƒüeri gereklidir ve 0\'dan b√ºy√ºk olmalƒ±dƒ±r!');
                return false;
            }

            if (!storage || storage <= 0) {
                e.preventDefault();
                alert('Depolama deƒüeri gereklidir ve 0\'dan b√ºy√ºk olmalƒ±dƒ±r!');
                return false;
            }
        });
        
        // Price formatting
        document.querySelector('input[name="Price"]').addEventListener('blur', function(e) {
            if (e.target.value) {
                e.target.value = parseFloat(e.target.value).toFixed(2);
            }
        });
    </script>
}
