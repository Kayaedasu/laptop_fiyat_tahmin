@model SmartShop.Business.DTOs.ProductDetailDto

@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Ürünler</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Product Image -->
        <div class="col-md-6 mb-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name" style="width: 100%; max-height: 500px; object-fit: contain;">
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center rounded shadow" style="width: 100%; height: 500px;">
                    <i class="bi bi-laptop text-muted" style="font-size: 10rem;"></i>
                </div>
            }
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <h1 class="display-5 fw-bold">@Model.Name</h1>
            <p class="text-muted">Kategori: <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@Model.CategoryId">@Model.CategoryName</a></p>
            
            @if (Model.AverageRating.HasValue && Model.AverageRating.Value > 0)
            {
                <div class="mb-3">
                    <span class="badge bg-warning text-dark fs-6">
                        <i class="bi bi-star-fill"></i> @Model.AverageRating.Value.ToString("N1")
                    </span>
                    <span class="text-muted ms-2">(@Model.ReviewCount yorum)</span>
                </div>
            }

            <div class="mb-4">
                <h2 class="text-primary fw-bold">₺@Model.Price.ToString("N2")</h2>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="mb-4">
                    <h5><i class="bi bi-info-circle"></i> Açıklama</h5>
                    <p class="text-muted">@Model.Description</p>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.Brand) || !string.IsNullOrEmpty(Model.Model))
            {
                <div class="mb-4">
                    <h5><i class="bi bi-tag"></i> Ürün Bilgileri</h5>
                    <ul class="list-unstyled">
                        @if (!string.IsNullOrEmpty(Model.Brand))
                        {
                            <li><strong>Marka:</strong> @Model.Brand</li>
                        }
                        @if (!string.IsNullOrEmpty(Model.Model))
                        {
                            <li><strong>Model:</strong> @Model.Model</li>
                        }
                    </ul>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.Specifications))
            {
                <div class="mb-4">
                    <h5><i class="bi bi-cpu"></i> Teknik Özellikler</h5>
                    <pre class="bg-light p-3 rounded border">@Model.Specifications</pre>
                </div>
            }

            <div class="mb-4">
                <h5>Stok Durumu</h5>
                @if (Model.StockQuantity > 0)
                {
                    <span class="badge bg-success fs-6">Stokta (@Model.StockQuantity adet mevcut)</span>
                }
                else
                {
                    <span class="badge bg-danger fs-6">Stokta Yok</span>
                }
            </div>

            @if (Model.StockQuantity > 0)
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label for="quantity" class="form-label">Miktar</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1" max="@Model.StockQuantity" required>
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-md-block">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-cart-plus"></i> Sepete Ekle
                        </button>
                        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-arrow-left"></i> Alışverişe Devam Et
                        </a>
                    </div>
                </form>
            }
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="row mt-5">
        <div class="col-12">
            <h3 class="mb-4">Müşteri Yorumları</h3>
            
            @if (Context.Session.GetInt32("UserId") != null)
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Yorum Yaz</h5>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Products" asp-action="AddReview" method="post">
                            <input type="hidden" name="productId" value="@Model.ProductId" />
                            <div class="mb-3">
                                <label for="rating" class="form-label">Puan</label>
                                <select class="form-select" id="rating" name="rating" required>
                                    <option value="">Puan seçin</option>
                                    <option value="5">⭐⭐⭐⭐⭐ Mükemmel</option>
                                    <option value="4">⭐⭐⭐⭐ İyi</option>
                                    <option value="3">⭐⭐⭐ Orta</option>
                                    <option value="2">⭐⭐ Kötü</option>
                                    <option value="1">⭐ Çok Kötü</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="comment" class="form-label">Yorumunuz</label>
                                <textarea class="form-control" id="comment" name="comment" rows="4" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Yorum Gönder</button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <a asp-controller="Account" asp-action="Login">Giriş yapın</a> yorum yazmak için.
                </div>
            }

            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                <div class="reviews-list">
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="card mb-3 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="mb-0">@review.UserName</h6>
                                        <small class="text-muted">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </div>
                                    <div>
                                        <span class="badge bg-warning text-dark">
                                            @for (int i = 0; i < review.Rating; i++)
                                            {
                                                <i class="bi bi-star-fill"></i>
                                            }
                                        </span>
                                    </div>
                                </div>
                                <p class="mt-3 mb-0">@review.Comment</p>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-secondary">
                    Henüz yorum yok. Bu ürün için ilk yorum yapan siz olun!
                </div>
            }
        </div>
    </div>
</div>
